{
  "env": {
    "es6": true
  },
  "rules": {
    "no-var": "error",
    "semi": "error", // ;
    "quotes": ["error", "single"], // ''
    "indent": ["error", 2], // отступ
    "no-multi-spaces": "error", // нет лишних отступов
    "space-in-parens": ["error", "never"], // пробелы внутри скобок
    "no-spaced-func": 1, //отвечает за отсутствие пробелов между именем функции и скобками, а также между скобками и параметрами
    "comma-spacing": ["error", { "before": false, "after": true }], //пробелами между параметрами функций
    "no-multiple-empty-lines": ["error", { "max": 1 }], // количество пустых строк
    "prefer-const": "error",  // будет менять let на const
    "no-use-before-define": "error" // ошибк если fn используется до ее определения
  }
}